{
  "manifest_version": 2,
  "name": "Udemy Course Time Cost",
  "version": "1.0",
  "description": "A Firefox extension that calculates the time cost of a Udemy course.",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon.png"
  },
  "default_area": "navbar"
}
